{
    "name": "openeo-argoworkflows",

    "dockerComposeFile": "./docker-compose.yml",

    "service": "workspace",

    "workspaceFolder": "/openeo-argoworkflows",

	"settings": {
		"python.defaultInterpreterPath": "/openeo_argoworkflows/.venv",
		"python.venvPath": "/openeo_argoworkflows/.venv",
		"python.pythonPath": "/openeo_argoworkflows/.venv/bin/python",
		"python.testing.pytestArgs": [
			"tests"
		],
		"python.testing.pytestEnabled": true,
		"python.linting.enabled": true
	},


	"extensions": [
		"ms-python.python",
		"ms-toolsai.jupyter",
		"eamodio.gitlens",
		"GitLab.gitlab-workflow",
		"ms-azuretools.vscode-docker",
		"ms-python.vscode-pylance"
	],

	"remoteEnv": {
		"GPG_TTY": "$(tty)`"
	}
}